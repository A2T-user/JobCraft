<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Header"
        android:text="@string/team_title" />

    <TextView
        style="@style/Bold_32_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/header_margin_start"
        android:layout_marginTop="@dimen/header_margin_start"
        android:text="@string/who_worked_on_the_application" />

    <TextView
        style="@style/Medium_16_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/header_margin_start"
        android:layout_marginTop="@dimen/header_margin_top"
        android:lineSpacingExtra="@dimen/line_spacing"
        android:text="@string/authors" />

</LinearLayout>

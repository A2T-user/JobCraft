<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для CheckBox -->
    <style name="CheckBox_Style">
        <item name="buttonTint">@color/blue</item>
    </style>

    <!-- Стиль для RadioButton -->
    <style name="RadioButton_Style" parent="Regular_16_Style">
        <item name="buttonTint">@color/blue</item>
    </style>

    <!-- Стиль для кнопок-->
    <style name="ButtonStyle">
        <item name="android:layout_marginHorizontal">@dimen/margin_standard</item>
        <item name="android:paddingVertical">@dimen/button_padding</item>
        <item name="android:textAppearance">@style/Medium_16_Style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_rounded_button</item>
    </style>

    <!-- Стиль для EditText -->
    <style name="EditText_Style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/jcHintTextColor</item>
        <item name="android:textCursorDrawable">@drawable/blue_cursor</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">@dimen/margin_standard</item>
        <item name="android:paddingEnd">@dimen/edit_text_padding_end</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">200</item>
        <item name="android:textAppearance">@style/Regular_16_Style</item>
    </style>

    <!-- Стиль для Toolbar -->
    <style name="Toolbar_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="titleTextAppearance">@style/Medium_22_Style</item>
        <item name="titleTextColor">?attr/jcMainTextColor</item>
        <item name="navigationIconTint">?attr/jcMainTextColor</item>
    </style>

    <!-- Стиль для BottomNavigationView -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemTextAppearanceActive">@style/Regular_12_Style</item>
        <item name="itemTextAppearanceInactive">@style/Regular_12_Style</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@drawable/bg_bottom_nav</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Стиль для текста ошибок -->
    <style name="ErrorMessageStyle">
        <item name="android:layout_marginHorizontal">@dimen/margin_standard</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Medium_22_Style</item>
        <item name="android:textColor">?attr/jcMainTextColor</item>
    </style>

    <!-- Стиль для контейнера фильтра -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeColor">@null</item>
        <item name="android:editable">true</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">?attr/jcMainTextColor</item>
        <item name="endIconDrawable">@drawable/btn_forward</item>
        <item name="hintTextColor">?attr/jcMainTextColor</item>
    </style>

    <!-- Стиль для текста фильтра -->
    <style name="TextInputEditTextStyle">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">?attr/jcMainTextColor</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/Regular_16_Style</item>
        <item name="hintTextAppearance">@style/Regular_12_Style</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <!-- Стиль для контейнера фильтра зарплаты -->
    <style name="SalaryTextInputLayoutStyle">
        <item name="expandedHintEnabled">false</item>
        <item name="android:editable">true</item>
        <item name="hintTextAppearance">@style/Regular_12_Style</item>
        <item name="placeholderTextAppearance">@style/Regular_16_Style</item>
        <item name="cursorColor">@color/blue</item>
        <item name="hintTextColor">@color/blue
        </item> <!-- Цвет подсказки, когда она плавает над полем (при фокусе или вводе текста) -->
        <item name="placeholderTextColor">?attr/jcHintTextColor</item>  <!-- Цвет нижней подсказки -->
        <item name="android:textColorHint">?attr/jcHintTextColor</item>
    </style>

    <!-- Стиль для текста фильтра зарплаты-->
    <style name="SalaryTextInputEditTextStyle">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/Regular_16_Style</item>
        <item name="hintTextAppearance">@style/Regular_12_Style</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLength">50</item>
        <item name="android:textColor">@color/black</item>  <!-- Цвет текста внутри поля -->
        <item name="android:textColorHint">@color/black
        </item>  <!-- Цвет подсказки, когда она находится внутри поля (при отсутствии фокуса) -->
    </style>
</resources>

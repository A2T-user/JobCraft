<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для CheckBox -->
    <style name="CheckBox_Style">
        <item name="buttonTint">@color/blue</item>
    </style>

    <!-- Стиль для RadioButton -->
    <style name="RadioButton_Style">
        <item name="buttonTint">@color/blue</item>
    </style>

    <!-- Стиль для EditText -->
    <style name="EditText_Style" parent="Regular_16_Style">
        <item name="android:textColor">?attr/jcMainTextColor</item>
        <item name="android:textColorHint">?attr/jcHintTextColor</item>
        <item name="android:textCursorDrawable">@drawable/blue_cursor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <!-- Стиль заголовка -->
    <style name="Header_Style" parent="Medium_22_Style">
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/header_height</item>
    </style>

    <!-- Стиль для BottomNavigationView -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemTextAppearanceActive">@style/Regular_12_Style</item>
        <item name="itemTextAppearanceInactive">@style/Regular_12_Style</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@drawable/bg_bottom_nav</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Text Styles -->
    <style name="YS_Medium_22">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="YS_Regular_16">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>

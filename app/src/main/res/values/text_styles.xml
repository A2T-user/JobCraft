<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Сили шрифтов -->
    <style name="Bold_32_Style" parent="Base.Theme.JobCraft">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textFontWeight" tools:targetApi="28">700</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Medium_22_Style" parent="Base.Theme.JobCraft">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="28">500</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Medium_16_Style" parent="Base.Theme.JobCraft">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="28">500</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Regular_16_Style" parent="Base.Theme.JobCraft">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="28">400</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Regular_12_Style" parent="Base.Theme.JobCraft">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="28">400</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Header" parent="Medium_22_Style">
        <item name="android:layout_marginStart">@dimen/header_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/header_margin_end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/header_height</item>
    </style>
</resources>
